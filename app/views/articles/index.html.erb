<h1>Articles Listing</h1>

<table>
	<tr>
		<td><%=link_to 'Enter new article', new_article_path %></td>
	</tr>
	<tr></tr>
	
	<tr>
		<th>Article Title </th>
		<th></th>
		<th>Author Name  </th>
		<th> </th>
		<th>Year Published </th>
		<th> </th>
		<th>Publication </th>
		<th> </th>
	</tr>


	<% @articles.each do |article| %>
	<tr>
		<td><%= link_to(article.title, article_path(article)) %> </td>
		<td> </td>
		<td> <%= article.author_last_name%>, <%=article.author_first_name%> </td>
		<td> </td>
		<td><%=article.article_year %> </td>
		<td> </td>
		<td><%= article.pub_name %> </td>
		<td> </td>
		<td><%=link_to('edit', edit_article_path(article)) %> </td>
		<td><%=link_to('delete', article_path(article), method: :delete, data: {Confirm: "Are you sure?"}) %></td>
	<% end %>
	</tr>
</table>